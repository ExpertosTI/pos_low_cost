<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_low_cost.MasterCodeDialog" owl="1">
        <div class="popup popup-textinput">
            <header class="title drag-handle">
                <t t-esc="props.title"/>
            </header>
            <main class="body">
                <p t-if="props.body" t-esc="props.body"/>
                
                <div class="form-group">
                    <label for="master-code-input">Código Maestro:</label>
                    <input 
                        id="master-code-input"
                        type="password" 
                        class="form-control" 
                        t-model="state.masterCode"
                        t-on-input="onInputMasterCode"
                        placeholder="Ingrese el código maestro..."
                        autofocus="autofocus"/>
                </div>
                
                <div class="form-group">
                    <label for="new-password-input">Nueva Contraseña:</label>
                    <input 
                        id="new-password-input"
                        type="password" 
                        class="form-control" 
                        t-model="state.newPassword"
                        t-on-input="onInputNewPassword"
                        placeholder="Ingrese la nueva contraseña..."/>
                </div>
                
                <div class="form-group">
                    <label for="confirm-password-input">Confirmar Contraseña:</label>
                    <input 
                        id="confirm-password-input"
                        type="password" 
                        class="form-control" 
                        t-model="state.confirmPassword"
                        t-on-input="onInputConfirmPassword"
                        placeholder="Confirme la nueva contraseña..."/>
                </div>
                
                <div t-if="state.error" class="alert alert-danger">
                    <t t-esc="state.error"/>
                </div>
            </main>
            <footer class="footer">
                <div class="button confirm" t-on-click="onConfirm">
                    <t t-esc="props.confirmText"/>
                </div>
                <div class="button cancel" t-on-click="onCancel">
                    <t t-esc="props.cancelText"/>
                </div>
            </footer>
        </div>
    </t>
</templates>